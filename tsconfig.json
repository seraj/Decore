{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "build/lib",
    "lib": ["es2018", "dom"],
    "types": ["react", "jest"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": [
    "node_modules",
    "build",
    ".storybook",
    "src/internal",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
